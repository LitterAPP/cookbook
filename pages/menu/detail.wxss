
.swiper-item{
  display: flex;
  flex-direction: row;
  height: 200px;    
  justify-content: center;
}
.swiper-item-content{
  display: flex;
  flex-direction: column;    
}

.swiper-item-content image{
  border-radius:5px; 
  margin: 5px;
}

.swiper-item-content-1{
   display: flex;
  flex-direction: row; 
  justify-content:  space-between;
  margin: 0px 5px;
  align-items: center;
}
.swiper-item-content-1 image{
  height: 20px;
  width: 20px;
}
.title{
margin: 10px;
}
.title text{
  color: #000;
  font-size: 20px;
  font-weight: bold; 
}
.userinfo{
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
  justify-content: space-between;
  margin: 5px 10px;
}
.userinfo-left{
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
  justify-content: flex-start;
  margin: 5px 10px;
}
.userinfo image{
  width: 45px;
  height: 45px;
  border-radius: 50%;
}
.userinfo text{
  font-size: 14px;
  color: #949491;
}
.introduction{
  margin: 5px 10px;
}
.introduction text{
  font-size: 14px;
  color: #515151;
} 

image{
  width: 20px;
  height: 20px;
}

text{
  color: #000;
}

.container{
  margin: 10px;
}

.master{
  display:  flex;
  flex-direction: row;
  align-items:  flex-start;
  justify-content: flex-start;
}
.avatar image{
  width: 40px;
  height: 40px;
  margin-right: 10px;
}
.content{
  display: flex;
  flex-direction: column;
}
.content-bottom{
   display:  flex;
  flex-direction: row;
  align-items:  center;
  justify-content: space-between;
}

.favor{
  display:  flex;
  flex-direction: row;
  align-items:  flex-start;
  align-content: flex-start;
  justify-content: flex-start;
  background: #F3F3F6;
  border-bottom: 1px solid #F3F3F7;
  padding: 5px;
}
.favor text{  
  font-size: 13px;
  color: #FF8247;
}


.comment-list{
  display:  flex;
  flex-direction: column; 
  background: #F3F3F6;
  padding: 5px;
}
.comment-list-left{
  display:  flex;
  flex-direction: row;
  align-items:  flex-start;
  align-content: flex-start;
  justify-content: flex-start;
}

.comment-list-right{
  display:  flex;
  flex-direction: row;
  align-items:  flex-start;
  align-content: flex-start;
  justify-content: flex-start;
  margin: 0px 5px;
}
.comment-list-right image{
  margin-right: 5px;
}
.comment-list-right-r{
  display:  flex;
  flex-direction: column;
  border-bottom: 1px solid #F3F3F7;
}
.comment-list-right-r-l{
  display:  flex;
  flex-direction: row;
  align-items:  flex-start;
  align-content: flex-start;
  justify-content: space-between;
}

.nickname{
  font-size: 15px;
  color: #FF8247;
}

.menu-title{
  font-size: 16px;
}

.time{
  font-size: 12px;
  color: #949491;
}

.comment-list-left-nn{
  font-size: 13px;
  color: #FF8247;
}
.comment-list-right-text{
  font-size: 12px;
  color: #949491;
}
.comment-list-left-cmt{
  font-size: 14px;
}

.fix-bottom{
background: #F3F3F6;
}
.input-box{
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
  justify-content: space-around;
  
}

.input-box input{
  background: #fff;
  border-radius: 5px;
  font-size: 14px;
  padding: 0 10px;
  height: 40px;
}

.input-box image{
  height: 40px;
  width: 40px;
}

