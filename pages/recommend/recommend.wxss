page{
  font-size: 15px;
}
.recmd-bytime{
  /*background: #ff8000;*/
}
.recmd-bytime-title{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin: 20px 10px;  
} 

.recmd-bytime-more{
  display: flex;
  flex-direction: row;
  align-items: center; 
}
.recmd-bytime-more text{
  font-size: 14px;
  color: #949491;
}
.recmd-bytime-more image{
  width: 20px;
  height: 20px;
}

.swiper-item{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 200px;    
  justify-content: space-around;
}
.swiper-item-content{
  display: flex;
  flex-direction: column; 
}

.swiper-item-content image{
  border-radius:5px; 
}
.ai-recmd-more{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin: 0px 10px;
  margin-bottom: 10px;
}
 
.ai-recmd-more-list-content{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content:flex-start;
  margin: 0px 10px;
  margin-bottom:5px; 
}
.ai-recmd-more-list-content image{
   border-radius: 5px;
   margin: 5px;
}
.ai-recmd-more-list-content-1{
  display: flex;
  flex-direction:column; 
  padding: 5px 10px;
}

.reflush{
   display: flex;
  flex-direction: row;
  align-items: center;
  
}
.reflush image{
  width: 25px;
  height: 25px;
}
.reflush text{
  padding: 1px;
}
.search {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background: #ff8000;
  padding-top:10px; 
    padding-bottom:10px; 
}

.search-icon {
  display: flex;
  flex-direction: row;
  height: 40px;
  width: 40px;
  background: #dbdbdb;
  align-items: center;
  justify-content: center;
  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;
}
.search-icon image {
  height: 30px;
  width: 30px;
}
.clear-icon {
  display: flex;
  flex-direction: row;
  height: 40px;
  width: 40px;
  background: #dbdbdb;
  align-items: center;
  justify-content: center;
  border-top-right-radius: 5px;
  border-bottom-right-radius: 5px;
}
.clear-icon image {
  height: 20px;
  width: 20px;
}

.search input {
  font-size: 14px;
  height: 40px;
  background: #e6e6e6; 
  padding-left: 10px;
}
