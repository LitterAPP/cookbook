.order-id{
  display: flex;
  flex-direction: row;
  align-content: center;
  align-items: center;
  justify-content: space-between;
  padding: 5px 10px;
  background: #fff;
  margin: 5px 0px;
}
.order-id text{
  font-size: 15px;
  color: #666;
}
.address{
  display: flex;
  flex-direction: row;
  align-content: center;
  align-items: center;
  justify-content: space-around;
  padding: 5px 10px;
  background: #fff;
  margin-bottom:5px; 
}
.adderss-info{
  display: flex;
  flex-direction: column;
  padding: 5px;
}
.adderss-info text{
  color:#666;
  font-size:15px;
}

.address image{
  width: 30px;
  height: 30px;
}
.xinfeng image{
  height: 5px;
}

.card{
  display: flex;
  flex-direction: column;
  margin-bottom:5px; 
}

.card text{
  margin: 0px 5px;
}

.card input{ 
  background: #fff;
}


.order-item{
  background: #fff; 
  margin-top:10px;
}
.order-item-1{
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
  justify-content: space-between;   
  padding: 5px;
}

.order-item-1 image{
  height: 60px;
  width: 60px;
  border: 1px solid #b4b4b4;
  border-radius: 50%; 
}
.order-item-1-2{
  display: flex;
  flex-direction: column;
  align-items: center;
  align-content: center; 
}

.order-item-1-2-1{
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
  justify-content: space-between;
}
.order-item-1-2-1 text{
  margin-left: 5px;
  color: #000;
  font-size: 15px;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;  
}

.order-item-2{
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
  justify-content:  flex-end;
  height: 30px;
  border-bottom: 1px solid #f2f2f2;
}

.order-item-2 text{
  font-size: 15px;
  color: #000;
  margin-right:10px; 
}